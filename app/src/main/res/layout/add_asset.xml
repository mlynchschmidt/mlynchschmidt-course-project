<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asset Tag"
        android:id="@+id/asset_tag_textview"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand"
        android:id="@+id/brand_textview"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/asset_tag_textview"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model"
        android:id="@+id/model_textview"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/brand_textview"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Serial Code"
        android:id="@+id/scode_textview"
        android:layout_below="@+id/model_textview"
        android:layout_alignEnd="@+id/purchase_textview"
        android:layout_marginTop="39dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retailer"
        android:id="@+id/retailer_textview"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scode_textview"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchase Date"
        android:id="@+id/purchase_textview"
        android:layout_below="@+id/retailer_textview"
        android:layout_alignParentStart="true"/>

</RelativeLayout>